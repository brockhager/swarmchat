{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SwarmChat",
  "version": "0.1.0",
  "identifier": "com.example.swarmchat",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../public"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/sidecar/*"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "certificateThumbprint": null
    }
  },
  "app": {
    "windows": [
      {
        "title": "SwarmChat",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
